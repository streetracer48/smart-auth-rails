
<div class="row">
<div class="col-md-4  col-md-offset-4">
    <h2 class="text-center text-muted mb-4">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/devisemessage" %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
  <%= f.password_field :password, autocomplete: "new-password",
                                  placeholder: 'Password',
                                  class: 'form-control' %>
  <small class="text-muted d-block"><%= @minimum_password_length %> characters minimum</small>
  </div>

  <div class="form-group">
  <%= f.password_field :password_confirmation,    autocomplete: "password_confirmation",
                                                  placeholder: 'Confirm Password',
                                                  class: 'form-control'
                                                  %>
  </div>


  <div class="form-group">
  <%= f.submit "Change my password", class: 'btn btn-normal btn-block' %>
</div>
<% end %>

</div>
</div>
