
<div class="row">
<div class="col-md-4  col-md-offset-4">
    <h2 class="text-center text-muted mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "shared/devisemessage" %>

        <div class="form-group">
        <%= f.text_field :fullname,   autofocus: true, 
                                    autocomplete: "fullname",
                                    class: 'form-control',
                                    placeholder: 'Full Name' %>
      </div>

        <div class="form-group">
        <%= f.email_field :email,   autofocus: true, 
                                    autocomplete: "email",
                                    placeholder: 'Email',
                                    class: 'form-control' %>
        </div>

      <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password",
                                      placeholder: 'Password',
                                      class: 'form-control' %>
      <small class="text-muted d-block"><%= @minimum_password_length %> characters minimum</small>
      </div>

      <div class="form-group">
      <%= f.password_field :password_confirmation,    autocomplete: "password_confirmation",
                                                      placeholder: 'Confirm Password',
                                                      class: 'form-control'
                                                      %>
      </div>

<div class="form-group">
<%= f.submit "Sign up", class: 'btn btn-normal btn-block' %>
</div>
<% end %>
<hr/>

<%= link_to "Sign up in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-facebook btn-block'  %>

</div>
</div>